<!DOCTYPE html>
<html>
<head>
  <title>AttendActivitiesRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<% if user_signed_in? %>
  <div>
  logged in as : <strong><%= current_user.username %></strong>     <!-- current_username is a DEVISE parameter -->
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </div>

<% end %>

<%= yield %>

</body>
</html>
